{
  "name": "@sendbird/react-native-push-extension",
  "version": "1.0.0",
  "description": "Push Notifications extension for React-Native",
  "files": [
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace @sendbird/notifications-extension-example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "release": "release-it"
  },
  "keywords": [
    "sendbird",
    "notifications",
    "business message",
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sendbird/react-native-push-extension.git"
  },
  "author": "sendbird <support@sendbird.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://community.sendbird.com"
  },
  "homepage": "https://github.com/sendbird/react-native-push-extension#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "del-cli": "^5.1.0",
    "react": "18.2.0",
    "react-native": "0.73.4",
    "release-it": "^15.0.0",
    "turbo": "^1.10.7"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
